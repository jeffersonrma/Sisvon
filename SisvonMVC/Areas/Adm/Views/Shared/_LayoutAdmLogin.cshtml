<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="favicon.png" sizes="16x16">
    <title>@ViewBag.Title - Comercial Portomat</title>
    @Styles.Render("~/Content/cssAdm")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div id="container">
    <div id="headerArea">
        <header>
            <div class="width100">

                <div id="logo">
                    <a href="~/adm"><img src="~/Content/Imagem/weblogo.png" /></a>
                </div>
                <div class="col-sm-12 col-offset-250">
                    <div id="header">
                        <h1>Área Administrativa</h1>
                      </div>
                </div>
            </div>

        </header>
    </div>
    <div id="mainContentArea">
        <div id="contentArea" class="col-sm-12">
            @Html.Partial("_ErrosSystem")
            @RenderBody()
        </div>
    </div>
    <div id="footer">@{Html.RenderPartial("_FooterAdm");}</div>
</div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>