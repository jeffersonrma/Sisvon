<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style type="text/css" media="print">
        body {
            -webkit-print-color-adjust: exact;
        }
    </style>

    <style type="text/css">
        body {
            width: 794px;
            height: 1122px;
            position: relative;
        }

        header {
            width: 100%;
            position: relative;
        }

        img {
            max-width: 110px;
            position: absolute;
            top: -12px;
            right: 0px;
        }

        h2 {
            text-align: center;
        }


        table {
            width: 100%;
            border-collapse: collapse;
            line-height: 28px;
        }

        th {
            text-align: left;
        }

        thead {
            border-bottom: 4px groove #ddd;
        }

        tfoot {
            border-top: 4px ridge #ddd;
        }

        tbody > tr:nth-child(even) {
            background-color: #eee !important;
        }
    </style>
    @RenderSection("css", required: false)
</head>
<body>
    <header>
        <h2>@ViewBag.H2</h2>
        <img alt="Comercial Portomat" src="~/Content/Imagem/weblogo.png" />
    </header>
    @RenderBody()
    <footer></footer>
</body>
</html>
<script></script>