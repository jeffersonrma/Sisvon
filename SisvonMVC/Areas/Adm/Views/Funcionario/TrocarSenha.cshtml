@model Sisvon.Model.Entities.Funcionario
@{
    ViewBag.Title = "Trocar Senha";
}
<div class="col-sm-12 bg-color-white">
    <div class=" body-content-padding">
        <h2>Trocar senha - @Model.Nome</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4></h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.Label("Senha", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("txtSenha", new { htmlAttributes = new { @class = "form-control", @type = "password", required = "" } })
                        @Html.ValidationMessage("txtSenha", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Nova Senha", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("txtNovaSenha", new { htmlAttributes = new { @class = "form-control", @type = "password", required = "" } })
                        @Html.ValidationMessage("txtNovaSenha", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Trocar Senha" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

        <div class="form-group">

            <div class="col-md-2">
                <a href="#" onclick="history.back()" class="btn btn-sm btn-warning"> Voltar</a>
                
            </div>
        </div>
    </div>
</div>
