@{
    ViewBag.Title = "Trocar Senha";
}
<div class="col-sm-12 bg-color-white">
    <div class=" body-content-padding">
        <h2>Trocar Senha</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal col-sm-12">

                <hr />
                <div class="col-sm-6 col-sm-offset-3">

                    <div class="form-group">
                        @Html.Label("Senha atual", htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.Editor("txtSenha", new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessage("txtSenha", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Nova Senha", htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.Editor("txtSenhaNova", new { htmlAttributes = new { @class = "form-control", @type="password" } })
                            @Html.ValidationMessage("txtSenhaNova", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Repetir Senha", htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.Editor("txtSenhaRepetir", new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessage("txtSenhaRepetir", "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>
            </div>
            <div class="col-xs-5 col-sm-2">
                @Html.ActionLink("Voltar", "Index", "home", null, new { @class = "btn btn-sm btn-warning" })
            </div>
            <div class="col-xs-7 col-sm-10">
                <input type="submit" value="Mudar Senha" class="btn btn-success" />
            </div>
        }

    </div>
</div>
